    function DeleteConfirm(e)
    {
        swal({
            title:"Are you sure?",
            text:"Are you sure you want to delete this record?",
            icon:"warning",
            buttons:true,
            dangerMode:true
        }).then((confirm)=>{
            if(confirm){
                var btn=$(e);
                var id=btn.data("id");
                $("#levelTypeId").val(id);
                $("#deleteForm").submit();
            }
        });
    }

    function AllocatingLeave(e)
    {
        swal({
            title:"Are you sure?",
            text:"Are you sure you want to allocation this leave to all employees?",
            icon:"warning",
            buttons:true,
            dangerMode:true
        }).then((confirm)=>{
